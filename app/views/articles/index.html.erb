<h1 align="center">Listing of all the Articles</h1>


<% @articles.each do |anything| %>
    <div class ="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="article-title">
            <%= link_to anything.title, article_path(anything) %>
          </div>
          <div class = "article-body">
              <%= truncate(anything.description, length: 100) %>
              <div class="article-meta-details">
                <small>Created by: <%= anything.user.username if anything.user  %>,
                    <%= time_ago_in_words(anything.created_at) %> ago,
                    last updated: <%= time_ago_in_words(anything.updated_at) %> ago</small>
              </div>                    
          </div>
          <div class = "article-actions">
            <%= link_to "Edit this Article", edit_article_path(anything), class: "btn btn-xs btn-primary"%> 
            <%= link_to "Delete this Article", article_path(anything), method: :delete, 
                                      data: {confirm: "Are you sure you want to delete the article ?"}, 
                                      class: "btn btn-xs btn-danger"%>
          </div>
        </div>
      </div>
    </div>
    
  <% end %>
